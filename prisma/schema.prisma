generator client {
  provider      = "prisma-client-js"
  output        = "../src/app/generated/prisma"
  binaryTargets = ["native"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  tgId          Int     @unique
  name          String
  image         String?

  futurepass    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model OpenedChest {
  id String  @id @default(auto()) @map("_id") @db.ObjectId
  userId    Int @unique
  chestId   Int
  reward    Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("opened_chests")
}